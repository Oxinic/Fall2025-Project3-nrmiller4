@model Fall2025_Project3_nrmiller4.Models.MovieDetailsViewModel

@{
    ViewData["Title"] = "Movie Details";
}

<h1>@Model.Movie.Title</h1>

<div class="row">
    <div class="col-md-4">
        @if (Model.Movie.Poster != null)
        {
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Movie.Poster)" 
                 alt="@Model.Movie.Title poster" class="img-fluid" />
        }
    </div>
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Genre</dt>
            <dd class="col-sm-9">@Model.Movie.Genre</dd>

            <dt class="col-sm-3">Year</dt>
            <dd class="col-sm-9">@Model.Movie.YearOfRelease</dd>

            <dt class="col-sm-3">IMDB</dt>
            <dd class="col-sm-9"><a href="@Model.Movie.ImdbLink" target="_blank">View on IMDB</a></dd>
        </dl>

        <h4>Actors in this Movie</h4>
        @if (Model.Actors.Any())
        {
            <ul>
                @foreach (var actor in Model.Actors)
                {
                    <li>
                        <a asp-controller="Actors" asp-action="Details" asp-route-id="@actor.Id">@actor.Name</a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No actors associated with this movie yet.</p>
        }
    </div>
</div>

<hr />

<h3>Movie Reviews (Average Sentiment: @Model.AverageSentiment.ToString("F2"))</h3>
<p class="lead">Overall sentiment is <strong>@(Model.AverageSentiment >= 0.05 ? "Positive" : Model.AverageSentiment <= -0.05 ? "Negative" : "Neutral")</strong></p>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th style="width: 70%;">Review</th>
            <th style="width: 15%;">Sentiment Score</th>
            <th style="width: 15%;">Sentiment</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model.Reviews)
        {
            <tr>
                <td>@review.Review</td>
                <td class="text-center">@review.Sentiment.ToString("F2")</td>
                <td class="text-center">
                    <span class="badge bg-@(review.SentimentLabel == "Positive" ? "success" : review.SentimentLabel == "Negative" ? "danger" : "secondary")">
                        @review.SentimentLabel
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Movie.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
