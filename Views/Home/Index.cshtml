@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to CinemaAI</h1>
    <p class="lead">Your AI-Powered Movie and Actor Database</p>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h3 class="card-title">📽️ Movies</h3>
                <p class="card-text">Browse and manage movies with AI-generated reviews and sentiment analysis. Get 10 unique reviews for each movie powered by Azure OpenAI.</p>
                <a asp-controller="Movies" asp-action="Index" class="btn btn-primary">View Movies</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h3 class="card-title">🎭 Actors</h3>
                <p class="card-text">Explore actors and see what people are saying! View 20 AI-generated tweets about each actor with sentiment analysis to gauge public opinion.</p>
                <a asp-controller="Actors" asp-action="Index" class="btn btn-primary">View Actors</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h3 class="card-title">🔗 Relationships</h3>
                <p class="card-text">Manage the connections between movies and actors. Create relationships to see which actors starred in which films.</p>
                <a asp-controller="MovieActors" asp-action="Index" class="btn btn-primary">Manage Relationships</a>
            </div>
        </div>
    </div>
</div>

<div class="mt-5">
    <h2>Features</h2>
    <ul class="list-group">
        <li class="list-group-item">
            <strong>AI-Powered Reviews:</strong> Get 10 detailed movie reviews generated by Azure OpenAI for every movie
        </li>
        <li class="list-group-item">
            <strong>Sentiment Analysis:</strong> See how positive or negative reviews and tweets are using VaderSharp2
        </li>
        <li class="list-group-item">
            <strong>Twitter Insights:</strong> View 20 simulated tweets about each actor to understand public perception
        </li>
        <li class="list-group-item">
            <strong>Rich Media:</strong> Upload and display movie posters and actor photos
        </li>
        <li class="list-group-item">
            <strong>IMDB Integration:</strong> Direct links to IMDB pages for movies and actors
        </li>
    </ul>
</div>
