@{
    ViewData["Title"] = "Home";
}

<div class="text-center mb-4">
    <h1 class="display-4">Movie & Actor Database</h1>
    <p class="lead">Explore movies and actors with AI-powered insights</p>
</div>

<div class="row">
    <div class="col-md-8">
        <h3>Welcome</h3>
        <p>
            This application helps you discover and manage information about movies and actors. 
            Browse the collection, see what the AI thinks about each movie through generated reviews, 
            and explore what people are saying about your favorite actors through AI-generated tweets.
        </p>
        <p>
            Each movie and actor page includes AI-generated content with sentiment analysis to help 
            you understand overall opinions at a glance.
        </p>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Quick Links</h5>
                <div class="d-grid gap-2">
                    <a asp-controller="Movies" asp-action="Index" class="btn btn-primary">Browse Movies</a>
                    <a asp-controller="Actors" asp-action="Index" class="btn btn-info">Browse Actors</a>
                    <a asp-controller="MovieActors" asp-action="Index" class="btn btn-secondary">View Relationships</a>
                </div>
                <hr />
                <div class="d-grid gap-2">
                    <a asp-controller="Movies" asp-action="Create" class="btn btn-outline-primary">Add Movie</a>
                    <a asp-controller="Actors" asp-action="Create" class="btn btn-outline-info">Add Actor</a>
                </div>
            </div>
        </div>
    </div>
</div>
