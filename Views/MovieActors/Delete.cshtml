@model Fall2025_Project3_nrmiller4.Models.MovieActor

@{
    ViewData["Title"] = "Delete Relationship";
}

<h1>Delete Movie-Actor Relationship</h1>

<h3>Are you sure you want to remove this relationship?</h3>
<div>
    <h4>Relationship Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Movie</dt>
        <dd class="col-sm-10">@Model.Movie.Title (@Model.Movie.YearOfRelease)</dd>
        
        <dt class="col-sm-2">Actor</dt>
        <dd class="col-sm-10">@Model.Actor.Name</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
