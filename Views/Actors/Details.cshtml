@model Fall2025_Project3_nrmiller4.Models.ActorDetailsViewModel

@{
    ViewData["Title"] = "Actor Details";
}

<h1>@Model.Actor.Name</h1>

<div class="row">
    <div class="col-md-4">
        @if (Model.Actor.Photo != null)
        {
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Actor.Photo)" 
                 alt="@Model.Actor.Name photo" class="img-fluid" />
        }
    </div>
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Gender</dt>
            <dd class="col-sm-9">@Model.Actor.Gender</dd>

            <dt class="col-sm-3">Age</dt>
            <dd class="col-sm-9">@Model.Actor.Age</dd>

            <dt class="col-sm-3">IMDB</dt>
            <dd class="col-sm-9"><a href="@Model.Actor.ImdbLink" target="_blank">View on IMDB</a></dd>
        </dl>

        <h4>Movies with this Actor</h4>
        @if (Model.Movies.Any())
        {
            <ul>
                @foreach (var movie in Model.Movies)
                {
                    <li>
                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">@movie.Title (@movie.YearOfRelease)</a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No movies associated with this actor yet.</p>
        }
    </div>
</div>

<hr />

<h3>AI-Generated Tweets (Average Sentiment: @Model.AverageSentiment.ToString("F2"))</h3>
<p class="lead">Overall sentiment is <strong>@(Model.AverageSentiment >= 0.05 ? "Positive" : Model.AverageSentiment <= -0.05 ? "Negative" : "Neutral")</strong></p>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th style="width: 70%;">Tweet</th>
            <th style="width: 15%;">Sentiment Score</th>
            <th style="width: 15%;">Sentiment</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tweet in Model.Tweets)
        {
            <tr>
                <td>@tweet.Tweet</td>
                <td class="text-center">@tweet.Sentiment.ToString("F2")</td>
                <td class="text-center">
                    <span class="badge bg-@(tweet.SentimentLabel == "Positive" ? "success" : tweet.SentimentLabel == "Negative" ? "danger" : "secondary")">
                        @tweet.SentimentLabel
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Actor.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
